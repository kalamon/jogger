<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <PreferenceCategory
        app:icon="@drawable/ic_settings_black_24px"
        app:title="@string/general">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="preference_enable_haptic_feedback"
            app:title="@string/enable_haptic_feedback"
            app:summary="@string/haptic_feedback_description"/>
    </PreferenceCategory>
    <PreferenceCategory
        app:icon="@drawable/ic_settings_ethernet_black_24px"
        app:title="@string/pref_header_network"
        app:initialExpandedChildrenCount="2"
        >
        <EditTextPreference
            app:defaultValue="3"
            android:selectAllOnFocus="true"
            app:singleLine="true"
            android:inputType="number|none"
            app:title="@string/pref_title_connect_timeout"
            app:key="preference_connect_timeout"
            app:summary="@string/pref_description_connect_timeout" />
        <EditTextPreference
            app:defaultValue="3"
            android:selectAllOnFocus="true"
            app:singleLine="true"
            android:inputType="number"
            app:title="@string/pref_title_read_timeout"
            app:key="preference_read_timeout"
            app:summary="@string/pref_description_read_timeout" />
    </PreferenceCategory>

</PreferenceScreen>
